<section class="reviews-section section-padding">
  <div class="container">
    <div class="section-title">
      <span class="reviews-section__label">{{ section.settings.subheading }}</span>
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <!-- Preview: 6 reviews in masonry with blur overlay at bottom -->
    <div class="reviews-preview-wrapper">
      <div class="reviews-preview-masonry">
        {%- for i in (1..6) -%}
          {%- assign idx = i | minus: 1 -%}
          {%- capture rev_num_str -%}{%- if i < 10 -%}0{{ i }}{%- else -%}{{ i }}{%- endif -%}{%- endcapture -%}
          <div class="review-card">
            <div class="review-card__media">
              <img src="{{ 'review-' | append: rev_num_str | append: '.jpg' | asset_url }}" alt="{{ rev_names[idx] }}" loading="lazy">
              <!-- Hover overlay on image -->
              <div class="review-card__img-overlay">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"><path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/></svg>
