<style>
  .reviews-section__label {
    font-size: 11px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-primary);
    font-weight: 600;
    display: block;
    margin-bottom: 8px;
  }

  /* Preview wrapper with blur fade */
  .reviews-preview-wrapper {
    position: relative;
    max-height: 620px;
    overflow: hidden;
  }
  @media (min-width: 750px) {
    .reviews-preview-wrapper { max-height: 700px; }
  }

  /* Blur overlay at bottom â€” teaser effect */
  .reviews-blur-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(
      to bottom,
      rgba(248, 245, 240, 0) 0%,
      rgba(248, 245, 240, 0.5) 30%,
      rgba(248, 245, 240, 0.85) 60%,
      rgba(248, 245, 240, 1) 100%
    );
    backdrop-filter: blur(3px);
    -webkit-backdrop-filter: blur(3px);
    pointer-events: none;
    z-index: 5;
  }

  /* Preview masonry â€” free height columns */
  .reviews-preview-masonry {
    column-count: 2;
    column-gap: 20px;
  }
  @media (min-width: 750px) {
    .reviews-preview-masonry { column-count: 3; column-gap: 24px; }
  }

  /* Masonry for modal */
  .reviews-masonry {
    column-count: 2;
    column-gap: 16px;
  }
  @media (min-width: 750px) { .reviews-masonry { column-count: 3; column-gap: 24px; } }

  /* Review card â€” enhanced design */
  .review-card {
    background: var(--color-white);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid rgba(0,0,0,0.06);
    margin-bottom: 20px;
    break-inside: avoid;
    display: inline-block;
    width: 100%;
    box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .review-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }
  @media (min-width: 750px) { .review-card { margin-bottom: 24px; } }

  /* Image with hover overlay */
  .review-card__media {
    position: relative;
    overflow: hidden;
  }
  .review-card__media img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.4s ease;
  }
  .review-card:hover .review-card__media img {
    transform: scale(1.05);
  }
  .review-card__img-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.25);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s;
  }
  .review-card:hover .review-card__img-overlay {
    opacity: 1;
  }

  .review-card__info { padding: 16px 18px 18px; }
  .review-card__stars-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }
  .review-card__stars {
    color: #D4A373;
    font-size: 14px;
    letter-spacing: 2px;
  }
  .review-card__tag {
    font-size: 10px;
    background: linear-gradient(135deg, rgba(190,52,78,0.08), rgba(190,52,78,0.15));
    color: var(--color-primary);
    padding: 4px 10px;
    border-radius: 20px;
    font-weight: 600;
    letter-spacing: 0.03em;
  }
  .review-card__text {
    font-size: 14px;
    color: var(--color-text-muted);
    line-height: 1.65;
    margin-bottom: 14px;
    font-style: italic;
  }
  .review-card__author {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .review-card__author-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
  }
  .review-card__name {
    font-size: 13px;
    font-weight: 700;
    color: var(--color-text);
  }
  .review-card__verified {
    font-size: 11px;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    gap: 4px;
    font-weight: 500;
    margin-left: auto;
  }
  .country-badge {
    background: var(--color-primary);
    color: var(--color-white);
    font-size: 10px;
    font-weight: 600;
    padding: 3px 6px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: inline-block;
  }

  /* Action Button â€” centered over blur */
  .reviews-actions {
    text-align: center;
    margin-top: -30px;
    position: relative;
    z-index: 10;
  }
  .reviews-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 36px;
    background: var(--color-primary);
    color: var(--color-white);
    font-size: 14px;
    font-weight: 600;
    border-radius: 50px;
    border: none;
    transition: all 0.3s;
    text-decoration: none;
    box-shadow: 0 6px 20px rgba(190,52,78,0.3);
    cursor: pointer;
    letter-spacing: 0.03em;
  }
  .reviews-btn:hover {
    box-shadow: 0 8px 28px rgba(190,52,78,0.4);
    transform: translateY(-2px);
    background: #a92e4a;
  }

  /* Modal */
  .reviews-modal {
    position: fixed;
    inset: 0;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }
  .reviews-modal.is-open {
    opacity: 1;
    visibility: visible;
  }
  .reviews-modal__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(4px);
  }
  .reviews-modal__content {
    position: relative;
    width: 95%;
    max-width: 1080px;
    height: 92vh;
    background: var(--color-bg);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    transform: translateY(20px);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.2);
  }
  .reviews-modal.is-open .reviews-modal__content {
    transform: translateY(0);
  }
  .reviews-modal__close {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    cursor: pointer;
    transition: background 0.2s;
    border: none;
  }
  .reviews-modal__close:hover { background: var(--color-bg-warm); }
  .reviews-modal__header {
    padding: 32px 24px 20px;
    text-align: center;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-border);
  }
  .reviews-modal__header h3 {
    font-family: var(--font-heading);
    font-size: 28px;
    margin-bottom: 8px;
  }
  .reviews-modal__header p {
    color: var(--color-text-muted);
    font-size: 14px;
  }
  .reviews-modal__scroll {
    flex: 1;
    overflow-y: auto;
    padding: 32px 0 60px;
  }
</style>

