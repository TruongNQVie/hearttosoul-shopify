  /* Action Button */
  .reviews-actions {
    text-align: center;
    margin-top: 40px;
  }
  .reviews-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 32px;
    background: var(--color-white);
    color: var(--color-text);
    font-size: 14px;
    font-weight: 600;
    border-radius: 50px;
    border: 1px solid var(--color-border);
    transition: all 0.3s;
    text-decoration: none;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  }
  .reviews-btn:hover {
    box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    transform: translateY(-2px);
  }

  /* Modal */
  .reviews-modal {
    position: fixed;
    inset: 0;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }
  .reviews-modal.is-open {
    opacity: 1;
    visibility: visible;
  }
  .reviews-modal__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(4px);
  }
  .reviews-modal__content {
    position: relative;
    width: 90%;
    max-width: 900px;
    height: 85vh;
    background: var(--color-bg);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    transform: translateY(20px);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.2);
  }
  .reviews-modal.is-open .reviews-modal__content {
    transform: translateY(0);
  }
  .reviews-modal__close {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    cursor: pointer;
    transition: background 0.2s;
  }
  .reviews-modal__close:hover { background: var(--color-bg-warm); }
  .reviews-modal__header {
    padding: 32px 24px 20px;
    text-align: center;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-border);
  }
  .reviews-modal__header h3 {
    font-family: var(--font-heading);
    font-size: 28px;
    margin-bottom: 8px;
  }
  .reviews-modal__header p {
    color: var(--color-text-muted);
    font-size: 14px;
  }
  .reviews-modal__scroll {
    flex: 1;
    overflow-y: auto;
    padding: 32px 0 60px;
  }
</style>

