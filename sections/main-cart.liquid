<section class="main-cart section-padding">
  <div class="container">
    <h1 style="font-family:var(--font-heading); font-size:clamp(2rem,4vw,3rem); text-align:center; margin-bottom:40px;">Your Cart</h1>

    {%- if cart.item_count > 0 -%}
      <form action="/cart" method="post" id="cart-form">
        <div style="max-width:800px; margin:0 auto;">
          {%- for item in cart.items -%}
            <div style="display:flex; gap:20px; align-items:center; padding:24px 0; border-bottom:1px solid var(--color-border);">
              <a href="{{ item.url }}" style="flex-shrink:0;">
                <img src="{{ item.image | image_url: width: 120 }}" alt="{{ item.title }}" style="width:100px; height:100px; object-fit:cover; border-radius:12px;">
              </a>
              <div style="flex:1;">
                <a href="{{ item.url }}" style="text-decoration:none; color:var(--color-text);">
                  <h3 style="font-size:15px; font-weight:600; margin-bottom:4px;">{{ item.product.title }}</h3>
                </a>
                {%- unless item.variant.title == 'Default Title' -%}
                  <p style="font-size:13px; color:var(--color-text-muted); margin-bottom:8px;">{{ item.variant.title }}</p>
                {%- endunless -%}
                <p style="font-size:16px; font-weight:600;">{{ item.final_line_price | money }}</p>
              </div>
              <div style="display:flex; align-items:center; gap:8px;">
                <label for="updates_{{ item.key }}" class="visually-hidden">Quantity</label>
                <input type="number" id="updates_{{ item.key }}" name="updates[]" value="{{ item.quantity }}" min="0" style="width:60px; padding:8px; text-align:center; border:1px solid var(--color-border); border-radius:8px; font-size:14px;">
              </div>
              <a href="/cart/change?line={{ forloop.index }}&quantity=0" style="color:var(--color-text-muted); font-size:20px; text-decoration:none; padding:8px;">Ã—</a>
            </div>
          {%- endfor -%}

          <div style="padding:24px 0; text-align:right;">
            <p style="font-size:18px; font-weight:700; margin-bottom:16px;">Subtotal: {{ cart.total_price | money }}</p>
            <p style="font-size:13px; color:var(--color-text-muted); margin-bottom:24px;">Shipping calculated at checkout.</p>
            <div style="display:flex; gap:12px; justify-content:flex-end;">
              <button type="submit" name="update" style="padding:12px 28px; background:var(--color-white); color:var(--color-text); border:1px solid var(--color-border); border-radius:50px; font-weight:600; font-size:14px; cursor:pointer;">Update Cart</button>
              <button type="submit" name="checkout" style="padding:12px 36px; background:var(--color-primary); color:var(--color-white); border:none; border-radius:50px; font-weight:600; font-size:14px; cursor:pointer;">Checkout</button>
            </div>
          </div>
        </div>
      </form>
    {%- else -%}
      <div style="text-align:center; padding:60px 20px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-muted)" stroke-width="1.5" style="margin-bottom:16px;"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
        <p style="font-size:18px; color:var(--color-text-muted); margin-bottom:24px;">Your cart is empty</p>
        <a href="/collections" style="display:inline-block; padding:14px 36px; background:var(--color-primary); color:var(--color-white); border-radius:50px; font-weight:600; font-size:14px; text-decoration:none;">Continue Shopping</a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
