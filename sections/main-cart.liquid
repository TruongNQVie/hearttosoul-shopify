        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="Apple Pay"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#000000"/><text x="24" y="19" text-anchor="middle" fill="#FFFFFF" font-size="8" font-weight="500" font-family="Arial"> Pay</text></svg></span>
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="PayPal"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#003087"/><text x="24" y="18" text-anchor="middle" fill="#FFFFFF" font-size="8" font-weight="700" font-family="Arial">PayPal</text></svg></span>
      </div>
    </div>
    <div class="cart-sticky-bar__actions">
      <a href="/checkout" class="cart-page__checkout-btn cart-sticky-bar__btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
        CHECKOUT NOW
      </a>
    </div>
  </div>
</div>

<style>
  /* Premium Cart Page Styling */
  .mt-12 { margin-top: 12px; }
  .mb-12 { margin-bottom: 12px; }

  .cart-page { max-width: 1300px; margin: 0 auto; padding: 40px 20px 80px; }
  
  .cart-page__header { 
    display: flex; align-items: baseline; gap: 16px; 
    margin-bottom: 32px; padding-bottom: 16px;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }
  .cart-page__header h1 { font-family: var(--font-heading); font-size: 36px; font-weight: 400; color: var(--color-text); margin: 0; }
  .cart-page__count { font-size: 15px; font-weight: 500; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 1px; }

  /* 2-Column Layout */
  .cart-page__content { display: grid; grid-template-columns: 1fr; gap: 32px; align-items: start; }
  @media (min-width: 992px) {
    .cart-page__content { grid-template-columns: 1fr 420px; gap: 40px; }
  }

  /* Left Column Container (Items + Upsell) */
  .cart-page__items-container {
    background: #ffffff;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.03);
    padding: 32px;
    border: 1px solid rgba(0,0,0,0.03);
  }
  @media (max-width: 768px) {
    .cart-page__items-container { padding: 20px; border-radius: 16px; }
  }

  /* Cart Items */
  .cart-page__item {
    display: flex; gap: 24px; padding: 24px 0;
    border-bottom: 1px solid rgba(0,0,0,0.06);
    position: relative;
  }
  .cart-page__item:first-child { padding-top: 0; }
  .cart-page__item:last-child { border-bottom: none; padding-bottom: 0; }
  
  .cart-page__item-img { 
    width: 120px; height: 120px; 
    border-radius: 16px; overflow: hidden; 
    flex-shrink: 0; background: #faf9f7;
    border: 1px solid rgba(0,0,0,0.04);
  }
  .cart-page__item-img img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s; }
  .cart-page__item-img:hover img { transform: scale(1.05); }

  .cart-page__item-details { flex: 1; min-width: 0; display: flex; flex-direction: column; justify-content: center; }
  .cart-page__item-title { 
    font-family: var(--font-heading); font-size: 18px; 
    font-weight: 500; color: var(--color-text);
    margin-bottom: 6px; line-height: 1.3; text-decoration: none;
    display: inline-block;
  }
  .cart-page__item-title:hover { color: var(--color-primary); }
  .cart-page__item-variant { font-size: 13px; color: var(--color-text-muted); margin-bottom: 8px; }
  
  .cart-page__item-price { font-size: 16px; font-weight: 700; color: var(--color-primary); margin-bottom: 16px; display: flex; align-items: center; gap: 8px; }
  .cart-page__item-price span:last-child { font-weight: 400; }
  
  .cart-page__item-qty {
    display: flex; align-items: center; border: 1px solid rgba(0,0,0,0.1); 
    border-radius: 50px; width: fit-content; height: 36px; overflow: hidden;
  }
  .cart-page__item-qty a { text-decoration: none; height: 100%; }
  .cart-qty-btn {
    width: 36px; height: 100%; display: flex; align-items: center; justify-content: center;
    background: transparent; border: none; font-size: 18px;
    cursor: pointer; color: var(--color-text); transition: background 0.2s;
  }
  .cart-qty-btn:hover { background: rgba(0,0,0,0.03); }
  .cart-qty-num {
    display: flex; align-items: center; justify-content: center;
    min-width: 36px; height: 100%; text-align: center;
    font-size: 14px; font-weight: 600; color: var(--color-text);
  }
  
  .cart-page__item-total { display: flex; flex-direction: column; align-items: flex-end; justify-content: space-between; min-width: 90px; }
  .cart-page__item-total > span { font-size: 18px; font-weight: 700; color: var(--color-text); }
  .cart-page__remove {
    font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;
    color: #a0a0a0; transition: color 0.2s; text-decoration: none;
    display: flex; align-items: center; gap: 4px; padding: 6px; border-radius: 4px;
  }
  .cart-page__remove:hover { color: var(--color-error); background: rgba(220,53,69,0.05); }

  /* Upsell Section inside left column */
  .cart-page__promos {
    margin-top: 40px; padding-top: 40px;
    border-top: 1px solid rgba(0,0,0,0.06);
  }
  .cart-upsell__header { text-align: left; margin-bottom: 24px; }
  .cart-upsell__header h3 {
    font-family: var(--font-heading); font-size: 24px; font-weight: 400; color: var(--color-text); margin-bottom: 6px;
  }
  .cart-upsell__header p { font-size: 14px; color: var(--color-text-muted); }
  
  .cart-upsell__grid { display: grid; grid-template-columns: 1fr; gap: 20px; }
  @media (min-width: 600px) { .cart-upsell__grid { grid-template-columns: 1fr 1fr; } }
  
  .cart-upsell__item {
    display: flex; flex-direction: column; padding: 16px;
    background: #fdfbf7; border: 1px solid rgba(157,95,27,0.1);
    border-radius: 16px; transition: all 0.3s ease; position: relative;
  }
  .cart-upsell__item:hover {
    transform: translateY(-4px); border-color: rgba(157,95,27,0.3);
    box-shadow: 0 12px 24px rgba(157,95,27,0.08);
  }
  .cart-upsell__img-wrap {
    width: 100%; aspect-ratio: 1; border-radius: 12px;
    overflow: hidden; background: #fff; margin-bottom: 16px; position: relative;
  }
  .cart-upsell__img-wrap img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s; }
  .cart-upsell__item:hover .cart-upsell__img-wrap img { transform: scale(1.08); }
  
  .cart-upsell__info { flex: 1; display: flex; flex-direction: column; text-align: center; margin-bottom: 16px; }
  .cart-upsell__title { 
    font-size: 14px; font-weight: 600; line-height: 1.4; color: var(--color-text); 
    margin-bottom: 8px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-decoration: none; 
  }
  .cart-upsell__title:hover { color: var(--color-primary); }
  .cart-upsell__price { font-size: 16px; font-weight: 800; color: var(--color-primary); }
  
  .cart-upsell__add { 
    width: 100%; background: #ffffff; color: var(--color-text);
    border: 1px solid rgba(0,0,0,0.1); padding: 12px; 
    border-radius: 50px; font-size: 12px; font-weight: 700; cursor: pointer; 
    text-transform: uppercase; letter-spacing: 1px; transition: all 0.3s;
  }
  .cart-upsell__add:hover { background: var(--color-primary); color: white; border-color: var(--color-primary); }

  /* Order Summary Right Column */
  .cart-page__summary-card {
    background: #ffffff; border-radius: 24px; padding: 32px;
    position: sticky; top: 100px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.04);
    border: 1px solid rgba(0,0,0,0.03);
