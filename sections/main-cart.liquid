  .cart-remove-popup__text { font-size:14px; color:var(--color-text-muted); line-height:1.5; margin-bottom:12px; }
  .cart-remove-popup__product-name { font-size:13px; font-weight:600; color:var(--color-primary); margin-bottom:20px; }
  .cart-remove-popup__actions { display:flex; flex-direction:column; gap:10px; }
  .cart-remove-popup__keep {
    padding:16px 24px; border-radius:50px; border:none; background:#000;
    color:#fff; font-size:16px; font-weight:700; cursor:pointer; transition:all 0.2s;
    box-shadow:0 4px 15px rgba(0,0,0,0.15);
  }
  .cart-remove-popup__keep:hover { background:#222; transform:translateY(-1px); }
  .cart-remove-popup__remove {
    padding:12px 24px; border-radius:50px; border:1.5px solid var(--color-border);
    background:transparent; color:var(--color-text-muted); font-size:14px; font-weight:500;
    cursor:pointer; transition:all 0.2s;
  }
  .cart-remove-popup__remove:hover { border-color:var(--color-error); color:var(--color-error); }

  .cart-remove-popup__note { font-size:11px; color:var(--color-text-light); margin-top:16px; }
</style>

<script>
  // Remove confirmation popup
  let pendingRemoveUrl = '';
  
  function showRemovePopup(removeUrl, productName, productImg) {
    pendingRemoveUrl = removeUrl;
    document.getElementById('popup-product-name').textContent = productName;
    document.getElementById('popup-product-img').src = productImg;
    document.getElementById('cart-remove-popup').classList.add('active');
    document.body.style.overflow = 'hidden';
  }
  
  function closeRemovePopup() {
    document.getElementById('cart-remove-popup').classList.remove('active');
    document.body.style.overflow = '';
    pendingRemoveUrl = '';
  }
  
  document.getElementById('popup-confirm-remove').addEventListener('click', function() {
    if (pendingRemoveUrl) {
      window.location.href = pendingRemoveUrl;
    }
  });

  // Attach remove buttons via event delegation
  document.addEventListener('click', function(e) {
    var removeBtn = e.target.closest('.cart-page__remove[data-remove-url]');
    if (removeBtn) {
      e.preventDefault();
      showRemovePopup(
        removeBtn.getAttribute('data-remove-url'),
        removeBtn.getAttribute('data-remove-title'),
        removeBtn.getAttribute('data-remove-img')
      );
    }
  });

  // Sticky checkout bar - show when Order Summary scrolls out of view
  document.addEventListener('DOMContentLoaded', function() {
    const stickyBar = document.getElementById('cart-sticky-bar');
    const summaryCard = document.querySelector('.cart-page__summary-card');
    
    if (stickyBar && summaryCard) {
      // Use scroll event for reliable detection
      window.addEventListener('scroll', function() {
        const rect = summaryCard.getBoundingClientRect();
        // Show sticky bar when the bottom of the summary card is above the viewport
        if (rect.bottom < 0) {
          stickyBar.classList.add('visible');
        } else {
          stickyBar.classList.remove('visible');
        }
      });
    }
  });
</script>

