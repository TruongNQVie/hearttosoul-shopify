  }
  @keyframes popupSlideIn { from { opacity:0; transform:scale(0.9) translateY(20px); } to { opacity:1; transform:scale(1) translateY(0); } }
  .cart-remove-popup__close {
    position:absolute; top:12px; right:16px; background:none; border:none;
    font-size:28px; color:#999; cursor:pointer; line-height:1;
  }
  .cart-remove-popup__close:hover { color:#333; }
  .cart-remove-popup__img { width:100px; height:100px; border-radius:12px; object-fit:cover; margin:0 auto 16px; display:block; border:2px solid var(--color-border); }
