    <div class="cart-sticky-bar__center">
      <div class="cart-sticky-bar__secure" style="justify-content: center; margin-bottom: 6px;">
        <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
        100% SECURE CHECKOUT
      </div>
      <div class="cdraw-payments" style="justify-content: center; margin: 0; gap: 8px;">
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="Visa"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#1A1F71"/><text x="24" y="20" text-anchor="middle" fill="#FFFFFF" font-size="11" font-weight="700" font-family="Arial">VISA</text></svg></span>
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="Mastercard"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#252525"/><circle cx="19" cy="16" r="9" fill="#EB001B"/><circle cx="29" cy="16" r="9" fill="#F79E1B"/><path d="M24 9.5a9 9 0 0 1 0 13" fill="#FF5F00"/></svg></span>
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="American Express"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#006FCF"/><text x="24" y="18" text-anchor="middle" fill="#FFFFFF" font-size="7" font-weight="700" font-family="Arial">AMEX</text></svg></span>
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="Discover"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#FF6600"/><text x="24" y="18" text-anchor="middle" fill="#FFFFFF" font-size="7" font-weight="700" font-family="Arial">DISCOVER</text></svg></span>
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="Apple Pay"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#000000"/><text x="24" y="19" text-anchor="middle" fill="#FFFFFF" font-size="8" font-weight="500" font-family="Arial"> Pay</text></svg></span>
        <span class="cdraw-payment-icon" style="width:44px;height:28px;" title="PayPal"><svg viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#003087"/><text x="24" y="18" text-anchor="middle" fill="#FFFFFF" font-size="8" font-weight="700" font-family="Arial">PayPal</text></svg></span>
      </div>
    </div>
    <div class="cart-sticky-bar__actions">
      <a href="/checkout" class="cart-page__checkout-btn cart-sticky-bar__btn" name="checkout">
        CHECKOUT SECURELY
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
      </a>
    </div>
  </div>
</div>

<style>
  /* Premium Cart Page Styling (Synced with Base.css) */
  .mt-12 { margin-top: 12px; }
  .mb-12 { margin-bottom: 12px; }

  /* Ensure background matches base.css body background to blend with navigation and footer */
  .cart-page { max-width: var(--container-max); margin: 0 auto; padding: var(--space-40) var(--space-24) var(--space-80); background: var(--color-bg); }
  @media (min-width: 750px) { .cart-page { padding-left: var(--space-40); padding-right: var(--space-40); } }
  
  .cart-page__header { 
    display: flex; align-items: baseline; gap: var(--space-16); 
    margin-bottom: var(--space-32); padding-bottom: var(--space-16);
    border-bottom: 1px solid var(--color-border);
  }
  .cart-page__header h1 { font-family: var(--font-heading); font-size: clamp(2rem, 5vw, 3.5rem); font-weight: 400; color: var(--color-text); margin: 0; line-height: 1.2; }
  .cart-page__count { font-size: 15px; font-weight: 500; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 1px; }

  /* 2-Column Layout */
  .cart-page__content { display: grid; grid-template-columns: 1fr; gap: 32px; align-items: start; }
  @media (min-width: 992px) {
    .cart-page__content { grid-template-columns: 1fr 420px; gap: 40px; }
  }

  .cart-page__items-container {
    background: #ffffff;
    border-radius: 12px;
    padding: 32px;
  }
  @media (max-width: 768px) {
    .cart-page__items-container { padding: 0; background: transparent; }
  }

  /* Cart Items */
  .cart-page__item {
    display: flex; gap: var(--space-24); padding: var(--space-24) 0;
    border-bottom: 1px solid var(--color-border);
    position: relative;
  }
  .cart-page__item:first-child { padding-top: 0; }
  .cart-page__item:last-child { border-bottom: none; padding-bottom: 0; }
  
  .cart-page__item-img { 
    width: 130px; height: 130px; 
    border-radius: var(--radius-lg); overflow: hidden; 
    flex-shrink: 0; background: var(--color-bg-warm);
    position: relative;
  }
  .cart-page__item-img img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94); }
  .cart-page__item-img:hover img { transform: scale(1.05); }

  .cart-page__item-details { flex: 1; min-width: 0; display: flex; flex-direction: column; justify-content: flex-start; padding-top: 4px; }
  .cart-page__item-title { 
    font-family: var(--font-heading); font-size: 19px; 
    font-weight: 600; color: var(--color-text);
    margin-bottom: var(--space-8); line-height: 1.3; text-decoration: none;
    display: inline-block; transition: color 0.3s ease;
  }
  .cart-page__item-title:hover { color: var(--color-primary); }
  .cart-page__item-variant { font-size: 14px; color: var(--color-text-muted); margin-bottom: var(--space-12); letter-spacing: 0.5px;}
  
  .cart-page__item-price { font-size: 16px; font-weight: 700; color: var(--color-primary); margin-bottom: 16px; display: flex; align-items: center; gap: 8px; }
  .cart-page__item-price span:last-child { font-weight: 400; }
  
  .cart-page__item-qty {
    display: flex; align-items: center; border: 1px solid var(--color-border); 
    border-radius: var(--radius-sm); width: fit-content; height: 40px; overflow: hidden;
    background: var(--color-bg);
  }
  .cart-page__item-qty a { text-decoration: none; height: 100%; display: flex; align-items: center; justify-content: center; }
  .cart-qty-btn {
    width: 36px; height: 100%; display: flex; align-items: center; justify-content: center;
    background: transparent; border: none; font-size: 18px;
    cursor: pointer; color: var(--color-text-muted); transition: all 0.2s;
  }
  .cart-qty-btn:hover { color: var(--color-text); background: var(--color-bg-warm); }
  .cart-qty-num {
    display: flex; align-items: center; justify-content: center;
    min-width: 40px; height: 100%; text-align: center;
    font-size: 14px; font-weight: 600; color: var(--color-text);
    border-left: 1px solid var(--color-border);
    border-right: 1px solid var(--color-border);
  }
  
  .cart-page__item-total { display: flex; flex-direction: column; align-items: flex-end; justify-content: space-between; min-width: 100px; padding-top: 4px; }
  .cart-item-line-price { font-size: 18px; font-weight: 600; color: var(--color-text); letter-spacing: 0.5px; }
  .cart-page__remove {
    font-size: 12px; font-weight: 500; letter-spacing: 0.5px;
    color: var(--color-text-muted); transition: all 0.3s ease; text-decoration: none;
    display: flex; align-items: center; gap: 6px; padding: 4px 0; border-bottom: 1px solid transparent;
  }
  .cart-remove-text { text-transform: uppercase; }
  .cart-page__remove:hover { color: var(--color-error); border-bottom-color: var(--color-error); }

  /* Upsell Section inside left column */
  .cart-page__promos {
    margin-top: 40px; padding-top: 40px;
    border-top: 1px solid rgba(0,0,0,0.06);
  }
  .cart-upsell__header { text-align: left; margin-bottom: 24px; }
  .cart-upsell__header h3 {
    font-family: var(--font-heading); font-size: 24px; font-weight: 400; color: var(--color-text); margin-bottom: 6px;
  }
  .cart-upsell__header p { font-size: 14px; color: var(--color-text-muted); }
  
  .cart-upsell__grid { display: grid; grid-template-columns: 1fr; gap: 20px; }
