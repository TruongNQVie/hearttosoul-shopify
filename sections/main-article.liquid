<article class="article-page">
  <header class="article-header">
    <h1>{{ article.title }}</h1>
    <p class="article-meta">
      {{ article.published_at | date: "%B %d, %Y" }} | By {{ article.author }}
    </p>
  </header>

  {% if article.image %}
    <div class="article-image">
      <img src="{{ article.image | img_url: '1200x' }}" alt="{{ article.image.alt | escape }}">
    </div>
  {% endif %}

  <div class="article-content">
    {{ article.content }}
  </div>

  {% if blog.comments_enabled? %}
    <div class="article-comments">
      <h3>Comments</h3>
      {% paginate article.comments by 5 %}
        {% for comment in article.comments %}
          <div class="comment">
            <p><strong>{{ comment.author }}</strong> - {{ comment.created_at | date: "%B %d, %Y" }}</p>
            <p>{{ comment.content }}</p>
          </div>
        {% endfor %}
        {{ paginate | default_pagination }}
      {% endpaginate %}

      <div class="comment-form">
        {% form 'new_comment', article %}
          <h3>Leave a comment</h3>
          <input type="text" name="comment[author]" placeholder="Name" required>
          <input type="email" name="comment[email]" placeholder="Email" required>
          <textarea name="comment[body]" placeholder="Your comment" required></textarea>
          <button type="submit">Post Comment</button>
        {% endform %}
      </div>
    </div>
  {% endif %}
</article>

<style>
  .article-page { max-width: 800px; margin: 0 auto; padding: 40px 20px; }
  .article-header { text-align: center; margin-bottom: 30px; }
  .article-meta { color: #666; font-size: 0.9em; }
  .article-image { margin: 30px 0; }
  .article-image img { width: 100%; height: auto; }
  .article-content { line-height: 1.8; font-size: 1.1em; }
  .comment { border-bottom: 1px solid #ddd; padding: 20px 0; }
  .comment-form input, .comment-form textarea { width: 100%; padding: 10px; margin: 10px 0; }
  .comment-form button { padding: 12px 30px; }
</style>

{% schema %}
{
  "name": "Article",
  "settings": []
}
{% endschema %}
