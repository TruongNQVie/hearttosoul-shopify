<section class="featured-by">
  <div class="featured-by__inner">
    <p class="featured-by__label">{{ section.settings.title }}</p>
    <div class="featured-by__marquee-wrapper">
      <div class="featured-by__marquee">
        {%- for block in section.blocks -%}
          <span class="featured-by__name" {{ block.shopify_attributes }}>{{ block.settings.name }}</span>
          <span class="featured-by__dot">·</span>
        {%- endfor -%}
        <!-- Duplicate for seamless loop -->
        {%- for block in section.blocks -%}
          <span class="featured-by__name" {{ block.shopify_attributes }}>{{ block.settings.name }}</span>
          <span class="featured-by__dot">·</span>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<style>
  .featured-by {
    background: #776B63; /* Xám Đất */
    padding: 52px 20px;
    border-top: none;
    border-bottom: none;
  }
  .featured-by__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    text-align: center;
  }
  .featured-by__label {
    font-family: 'Montserrat', sans-serif;
    font-size: 12px;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #F9F8F3; /* Trắng Ngà */
    margin-bottom: 28px;
    font-weight: 600;
    opacity: 0.85;
  }
  /* Marquee wrapper */
  .featured-by__marquee-wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
  }
  .featured-by__marquee-wrapper::before,
  .featured-by__marquee-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 80px;
    z-index: 2;
    pointer-events: none;
  }
  .featured-by__marquee-wrapper::before {
    left: 0;
    background: linear-gradient(to right, #776B63, transparent);
  }
  .featured-by__marquee-wrapper::after {
    right: 0;
    background: linear-gradient(to left, #776B63, transparent);
  }
  .featured-by__marquee {
    display: flex;
    align-items: center;
    gap: 32px;
    animation: marqueeScroll 20s linear infinite;
    white-space: nowrap;
    will-change: transform;
  }
  @keyframes marqueeScroll {
    0%   { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  .featured-by__marquee:hover {
    animation-play-state: paused;
  }
  .featured-by__dot {
    color: #E6CDA9; /* Vàng Caramel */
    opacity: 0.6;
    font-size: 24px;
  }
  .featured-by__name {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(1.7rem, 4.5vw, 2.3rem);
    font-style: italic;
    color: #F9F8F3; /* Trắng Ngà — monochrome */
    opacity: 0.7;
    font-weight: 500;
    letter-spacing: 0.02em;
    flex-shrink: 0;
    transition: opacity 0.3s;
  }
  .featured-by__name:hover {
    opacity: 1;
  }
</style>

