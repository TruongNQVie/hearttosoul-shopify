<section class="section-padding" style="background: var(--color-white);">
  <div style="max-width:1320px; margin:0 auto; padding:0 20px;">
    <div class="section-title">
      <h2>{{ section.settings.title }}</h2>
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    {%- if section.settings.collection != blank -%}
      <div class="product-grid">
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all -%}
        <div style="text-align:right; margin-top:32px;">
          <a href="{{ section.settings.collection.url }}" class="featured-products__view-all">
            Shop All {{ section.settings.collection.title }} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="product-grid">
        {%- for i in (1..4) -%}
          <div class="product-card">
            <div class="product-card__media">
              {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">Sample Product {{ i }}</h3>
              <p class="product-card__price">$49.99</p>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* Inline overrides â€” bypass CSS file caching */
  .product-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }
  .product-card__info {
    padding: 14px 8px 4px !important;
  }
  .product-card__rating {
    margin-bottom: 6px;
    display: flex;
    align-items: center;
  }
  .product-card__stars {
    background: linear-gradient(135deg, #FF8C00, #FFD700) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
    font-size: 20px !important;
    letter-spacing: 3px !important;
    filter: drop-shadow(0 2px 4px rgba(255,140,0,0.35));
  }
  .product-card__title {
    font-size: 17px !important;
    font-weight: 700 !important;
    line-height: 1.45 !important;
    margin-bottom: 8px !important;
  }
  .product-card:hover .product-card__title {
    color: var(--color-primary) !important;
  }
  .product-card__price {
    font-size: 18px !important;
    font-weight: 700 !important;
  }
  .product-card__shipping {
    color: var(--color-primary) !important;
    font-weight: 500 !important;
    margin-top: 6px !important;
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Our Bestsellers" },
    { "type": "textarea", "id": "description", "label": "Description" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "products_to_show", "min": 2, "max": 12, "step": 1, "default": 8, "label": "Products to show" },
    { "type": "checkbox", "id": "show_view_all", "default": true, "label": "Show 'View All' button" }
  ],
  "presets": [{ "name": "Featured Products" }]
}
{% endschema %}
