<section class="featured-products-section section-padding">
  <div class="featured-products-container">
    <div class="section-title">
      <h2 class="fp-heading">{{ section.settings.title }}</h2>
      {%- if section.settings.description != blank -%}
        <p class="fp-subtitle">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    {%- assign target_collection = section.settings.collection -%}
    {%- if target_collection == blank -%}
      {%- assign target_collection = collections['all'] -%}
    {%- endif -%}

    {%- if target_collection != blank and target_collection.products_count > 0 -%}
      <div class="product-grid">
        {%- for product in target_collection.products limit: section.settings.products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all and target_collection.url != blank -%}
        <div style="text-align:right; margin-top:32px;">
          <a href="{{ target_collection.url }}" class="featured-products__view-all">
            Shop All {{ target_collection.title }} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="product-grid">
        {%- for i in (1..4) -%}
          <div class="product-card">
            <div class="product-card__media">
              {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-card__info">
              <h3 class="product-card__title">Sample Product {{ i }}</h3>
              <p class="product-card__price">$49.99</p>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .featured-products-section {
    background: #F9F8F3; /* Trắng Ngà */
  }
  .featured-products-container {
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .fp-heading {
    font-family: 'Cormorant Garamond', serif !important;
    color: #1D1D1D !important;
    font-weight: 500;
  }
  .fp-subtitle {
    font-family: 'Montserrat', sans-serif !important;
    color: rgba(29,29,29,0.55) !important;
    font-size: 14px;
  }

  /* Product Card Overrides */
  .product-card {
    border: 1px solid rgba(29, 29, 29, 0.1) !important;
    box-shadow: none !important;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, border-color 0.3s ease !important;
  }
  .product-card:hover {
    transform: translateY(-4px) !important;
    box-shadow: none !important;
    border-color: rgba(29, 29, 29, 0.2) !important;
  }
  .product-card__info {
    padding: 14px 12px 8px !important;
  }
  .product-card__rating {
    margin-bottom: 6px;
    display: flex;
    align-items: center;
  }
  .product-card__stars {
    background: linear-gradient(135deg, #FF8C00, #FFD700) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
    font-size: 20px !important;
    letter-spacing: 3px !important;
    filter: drop-shadow(0 2px 4px rgba(255,140,0,0.35));
  }
  .product-card__title {
    font-family: 'Montserrat', sans-serif !important;
    font-size: 15px !important;
    font-weight: 600 !important;
    line-height: 1.45 !important;
    margin-bottom: 8px !important;
    color: #1D1D1D !important;
  }
  .product-card:hover .product-card__title {
    color: #7F1B17 !important;
  }

  /* Price colors */
  .product-card__price {
    font-size: 18px !important;
    font-weight: 700 !important;
  }
  .product-card .price-current {
    font-family: 'Montserrat', sans-serif !important;
    color: #7F1B17 !important; /* Đỏ Anh Đào Sậm */
    font-weight: 700 !important;
    font-size: 18px !important;
  }
  .product-card .price-compare {
    color: #B4B4B4 !important;
    text-decoration: line-through !important;
    font-weight: 400 !important;
    font-size: 14px !important;
  }
  .product-card__shipping {
    color: #E6CDA9 !important;
    font-weight: 500 !important;
    margin-top: 6px !important;
    font-family: 'Montserrat', sans-serif !important;
    font-size: 12px !important;
  }

  /* Add to Cart / Quick Add Button */
  .btn-quick-add {
    background: #480003 !important;
    color: #F9F8F3 !important;
    border: none !important;
    font-family: 'Montserrat', sans-serif !important;
    font-weight: 600 !important;
    letter-spacing: 0.04em !important;
    transition: background 0.3s ease, transform 0.1s ease !important;
  }
  .btn-quick-add:hover {
    background: #7F1B17 !important;
  }
  .btn-quick-add:active {
    transform: scale(0.96) translateY(2px) !important;
    transition: transform 0.08s ease !important;
  }

  /* Image hover crossfade (already supported via secondary img) */
  .product-card__image-wrapper {
    position: relative;
    overflow: hidden;
  }
  .product-card__main-img {
    transition: opacity 0.5s ease !important;
  }
  .product-card__secondary-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease !important;
  }
  .product-card:hover .product-card__main-img {
    opacity: 0 !important;
  }
  .product-card:hover .product-card__secondary-img {
    opacity: 1 !important;
  }

  .featured-products__view-all {
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: #1D1D1D;
    letter-spacing: 0.04em;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: color 0.3s ease;
  }
  .featured-products__view-all:hover {
    color: #7F1B17;
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Our Bestsellers" },
    { "type": "textarea", "id": "description", "label": "Description" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "products_to_show", "min": 2, "max": 12, "step": 1, "default": 8, "label": "Products to show" },
    { "type": "checkbox", "id": "show_view_all", "default": true, "label": "Show 'View All' button" }
  ],
  "presets": [{ "name": "Featured Products" }]
}
{% endschema %}
