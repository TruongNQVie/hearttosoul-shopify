<section class="our-story-hero">
  <div class="our-story-hero__bg">
    {%- if section.settings.image != blank -%}
      <img src="{{ section.settings.image | image_url: width: 2000 }}" alt="Our Story" loading="lazy">
    {%- else -%}
      <img src="{{ 'artisan.jpg' | asset_url }}" alt="Our Story" loading="lazy">
    {%- endif -%}
    <div class="our-story-hero__overlay"></div>
  </div>

  <div class="our-story-hero__content">
    <div class="our-story-hero__text">
      <span class="our-story-hero__label">{{ section.settings.subheading }}</span>
      <h2 class="our-story-hero__heading">{{ section.settings.heading }}</h2>
      <div class="our-story-hero__columns">
        <p>{{ section.settings.text_left }}</p>
        <p>{{ section.settings.text_right }}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .our-story-hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
  }
  @media (min-width: 750px) { .our-story-hero { min-height: 85vh; max-height: 900px; } }
  .our-story-hero__bg {
    position: absolute;
    inset: 0;
  }
  .our-story-hero__bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .our-story-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 30%, transparent 60%);
  }
  .our-story-hero__content {
    position: relative;
    z-index: 2;
    padding: 60px 20px 80px;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }
  @media (min-width: 750px) { .our-story-hero__content { padding: 100px 60px 120px; } }
  @media (min-width: 1600px) { .our-story-hero__content { padding: 100px 0 120px; } }
  .our-story-hero__text {
    max-width: 700px;
    text-align: left;
  }
  .our-story-hero__label {
    font-size: 11px;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: rgba(255,255,255,0.8);
    margin-bottom: 12px;
    display: block;
    font-weight: 500;
  }
  .our-story-hero__heading {
    font-family: var(--font-heading);
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 24px;
    line-height: 1.1;
  }
  .our-story-hero__columns {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }
  @media (min-width: 750px) { .our-story-hero__columns { grid-template-columns: 1fr 1fr; gap: 40px; } }
  .our-story-hero__columns p {
    font-size: 15px;
    line-height: 1.7;
    color: rgba(255,255,255,0.9);
  }

  /* Mobile — compact text, show more image */
  @media (max-width: 749px) {
    .our-story-hero { min-height: 400px; }
    .our-story-hero__content { padding: 0 16px 24px; }
    .our-story-hero__heading { font-size: 1.6rem; margin-bottom: 10px; }
    .our-story-hero__columns p { font-size: 12px; line-height: 1.55; margin-bottom: 0; }
    .our-story-hero__columns { gap: 8px; }
    .our-story-hero__label { font-size: 9px; margin-bottom: 6px; }
  }
</style>

{% schema %}
{
  "name": "Our Story",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Background image" },
    { "type": "text", "id": "subheading", "default": "OUR STORY", "label": "Subheading" },
    { "type": "text", "id": "heading", "default": "Heart To Soul", "label": "Heading" },
    { "type": "textarea", "id": "text_left", "default": "Every piece is meticulously assembled by skilled artisans. We pour our soul into every detail to ensure your gift is as perfect as the sacred love you share.", "label": "Left column text" },
    { "type": "textarea", "id": "text_right", "default": "From selecting the finest materials to placing each piece in our signature rose box, every step is a labor of love — crafted to be the ultimate symbol of your devotion.", "label": "Right column text" }
  ],
  "presets": [{ "name": "Our Story" }]
}
{% endschema %}
