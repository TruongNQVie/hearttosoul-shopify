<script>
  document.addEventListener("DOMContentLoaded", function() {
    /* Lazy video loading */
    const lazyVideos = document.querySelectorAll('video.lazy-video');
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const video = entry.target;
            if (video.hasAttribute('data-src')) {
              video.src = video.getAttribute('data-src');
              video.removeAttribute('data-src');
            }
            video.play().catch(e => { console.log('Autoplay prevented', e); });
          } else {
            entry.target.pause();
          }
        });
      }, { rootMargin: "0px 0px 200px 0px" });

      lazyVideos.forEach(v => observer.observe(v));
    } else {
      lazyVideos.forEach(v => {
        if (v.hasAttribute('data-src')) {
          v.src = v.getAttribute('data-src');
        }
      });
    }

    /* Scroll arrows */
    const grid = document.getElementById('ugcGrid');
    const leftBtn = document.getElementById('ugcScrollLeft');
    const rightBtn = document.getElementById('ugcScrollRight');
    if (grid && leftBtn && rightBtn) {
      const scrollAmount = 300;
      leftBtn.addEventListener('click', () => { grid.scrollBy({ left: -scrollAmount, behavior: 'smooth' }); });
      rightBtn.addEventListener('click', () => { grid.scrollBy({ left: scrollAmount, behavior: 'smooth' }); });
    }
  });
</script>
