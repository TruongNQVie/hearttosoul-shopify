<script>
  document.addEventListener("DOMContentLoaded", function() {
    /* Lazy video loading + slow playback */
    const lazyVideos = document.querySelectorAll('video.lazy-video');
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const video = entry.target;
            if (video.hasAttribute('data-src')) {
              video.src = video.getAttribute('data-src');
              video.removeAttribute('data-src');
            }
            video.playbackRate = 0.75;
            video.play().catch(e => { console.log('Autoplay prevented', e); });
          } else {
            entry.target.pause();
          }
        });
      }, { rootMargin: "0px 0px 200px 0px" });
      lazyVideos.forEach(v => observer.observe(v));
    } else {
      lazyVideos.forEach(v => {
        if (v.hasAttribute('data-src')) { v.src = v.getAttribute('data-src'); }
        v.playbackRate = 0.75;
      });
    }

    /* Scroll arrows */
    const grid = document.getElementById('ugcGrid');
    const leftBtn = document.getElementById('ugcScrollLeft');
    const rightBtn = document.getElementById('ugcScrollRight');
    if (grid && leftBtn && rightBtn) {
      const scrollAmount = 300;
      leftBtn.addEventListener('click', () => { grid.scrollBy({ left: -scrollAmount, behavior: 'smooth' }); });
      rightBtn.addEventListener('click', () => { grid.scrollBy({ left: scrollAmount, behavior: 'smooth' }); });
    }

    /* Smooth mouse-wheel â†’ horizontal scroll when hovering over the UGC grid */
    if (grid) {
      let scrollTarget = grid.scrollLeft;
      let isScrolling = false;

      function smoothScroll() {
        const diff = scrollTarget - grid.scrollLeft;
        if (Math.abs(diff) < 1) { isScrolling = false; return; }
        grid.scrollLeft += diff * 0.15;
        requestAnimationFrame(smoothScroll);
      }

      grid.addEventListener('wheel', function(e) {
        if (grid.scrollWidth <= grid.clientWidth) return;
        e.preventDefault();
        scrollTarget = Math.max(0, Math.min(scrollTarget + e.deltaY * 1.5, grid.scrollWidth - grid.clientWidth));
        if (!isScrolling) { isScrolling = true; requestAnimationFrame(smoothScroll); }
      }, { passive: false });
    }
  });
</script>
