<section class="ugc-section section-padding">
  <div class="container">
    <div class="section-title">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="ugc-grid">
      {%- for i in (1..8) -%}
        <div class="ugc-card">
          <div class="ugc-card__media">
            <video class="lazy-video" data-src="{{ 'ugc-video-' | append: i | append: '.mp4' | asset_url }}" autoplay loop muted playsinline></video>
          </div>
          <div class="ugc-card__info">
            {%- assign idx = i | minus: 1 -%}
            <div class="ugc-card__credit-row">
              <span class="ugc-card__credit">credit @{{ ugc_credits[idx] }}</span>
              <span class="country-badge">{{ ugc_countries[idx] }}</span>
            </div>
            <p class="ugc-card__caption">{{ ugc_captions[idx] }}</p>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .ugc-grid {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    padding-bottom: 20px;
    scroll-snap-type: x mandatory;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .ugc-grid::-webkit-scrollbar { display: none; }

  .ugc-card {
    flex: 0 0 80%;
    scroll-snap-align: start;
    background: var(--color-white);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }
  @media (min-width: 750px) {
    .ugc-card { flex: 0 0 calc(33.333% - 14px); }
  }
  @media (min-width: 990px) {
    .ugc-card { flex: 0 0 calc(25% - 12px); }
  }
  .ugc-card__media {
    position: relative;
    aspect-ratio: 9 / 16;
    overflow: hidden;
  }
  .ugc-card__media video, .ugc-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }
  .ugc-card:hover .ugc-card__media video,
  .ugc-card:hover .ugc-card__media img { transform: scale(1.05); }
  .ugc-card__info { padding: 10px 12px 12px; }
  .ugc-card__credit-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6px;
  }
  .ugc-card__credit {
    font-size: 11px;
    color: var(--color-text-muted);
  }
  .country-badge {
    background: var(--color-primary);
    color: var(--color-white);
    font-size: 10px;
    font-weight: 600;
    padding: 3px 6px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .ugc-card__caption {
    font-size: 13px;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

