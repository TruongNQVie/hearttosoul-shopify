<section class="ugc-section section-padding">
  <div class="container">
    <div class="section-title">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="ugc-scroll-wrapper">
