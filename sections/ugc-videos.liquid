<section class="ugc-section section-padding">
  <div class="container">
    <div class="section-title">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="ugc-grid">
      {%- for block in section.blocks -%}
        <div class="ugc-card" {{ block.shopify_attributes }}>
          <div class="ugc-card__media">
            {%- if block.settings.image != blank -%}
              <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.caption }}" loading="lazy">
            {%- else -%}
              {%- assign ugc_num = forloop.index | modulo: 3 -%}
              {%- if ugc_num == 0 -%}{%- assign ugc_num = 3 -%}{%- endif -%}
              <img src="{{ 'ugc-' | append: ugc_num | append: '.jpg' | asset_url }}" alt="{{ block.settings.caption }}" loading="lazy">
            {%- endif -%}
            <div class="ugc-card__play">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="white" stroke="none"><polygon points="5 3 19 12 5 21 5 3"/></svg>
            </div>
          </div>
          {%- if block.settings.credit != blank or block.settings.caption != blank -%}
            <div class="ugc-card__info">
              {%- if block.settings.credit != blank -%}
                <span class="ugc-card__credit">credit @{{ block.settings.credit }}</span>
              {%- endif -%}
              {%- if block.settings.caption != blank -%}
                <p class="ugc-card__caption">{{ block.settings.caption }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .ugc-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  @media (min-width: 750px) { .ugc-grid { grid-template-columns: repeat(3, 1fr); gap: 20px; } }
  @media (min-width: 990px) { .ugc-grid { grid-template-columns: repeat(6, 1fr); } }
  .ugc-card {
    background: var(--color-white);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }
  .ugc-card__media {
    position: relative;
    aspect-ratio: 9 / 16;
    overflow: hidden;
  }
  .ugc-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }
  .ugc-card:hover .ugc-card__media img { transform: scale(1.05); }
  .ugc-card__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 44px;
    height: 44px;
    background: rgba(190, 52, 78, 0.85);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }
  .ugc-card__play svg { margin-left: 3px; }
  .ugc-card__info { padding: 10px 12px 12px; }
  .ugc-card__credit {
    font-size: 11px;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 4px;
  }
  .ugc-card__caption {
    font-size: 13px;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

