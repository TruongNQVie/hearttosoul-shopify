<section class="ugc-section section-padding">
  <div class="container">
    <div class="section-title">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="ugc-grid">
      {%- for block in section.blocks -%}
        <div class="ugc-card" {{ block.shopify_attributes }}>
          <div class="ugc-card__media">
            {%- if block.settings.video != blank -%}
              {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '400x' }}
            {%- else -%}
              {%- assign ugc_num = forloop.index | modulo: 8 -%}
              {%- if ugc_num == 0 -%}{%- assign ugc_num = 8 -%}{%- endif -%}
              <video class="lazy-video" data-src="{{ 'ugc-video-' | append: ugc_num | append: '.mp4' | asset_url }}" autoplay loop muted playsinline></video>
            {%- endif -%}
          </div>
          {%- if block.settings.credit != blank or block.settings.caption != blank -%}
            <div class="ugc-card__info">
              {%- if block.settings.credit != blank -%}
                <div class="ugc-card__credit-row">
                  <span class="ugc-card__credit">credit @{{ block.settings.credit }}</span>
                  {%- if block.settings.country != blank -%}
                     <span class="country-badge">{{ block.settings.country }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}
              {%- if block.settings.caption != blank -%}
                <p class="ugc-card__caption">{{ block.settings.caption }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .ugc-grid {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    padding-bottom: 20px;
    scroll-snap-type: x mandatory;
    /* Hide scrollbar */
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .ugc-grid::-webkit-scrollbar { display: none; }
  
  .ugc-card {
    flex: 0 0 80%;
    scroll-snap-align: start;
    background: var(--color-white);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }
  @media (min-width: 750px) { 
    .ugc-card { flex: 0 0 calc(33.333% - 14px); } 
  }
  @media (min-width: 990px) { 
    .ugc-card { flex: 0 0 calc(25% - 12px); }
  }
  .ugc-card {
    background: var(--color-white);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }
  .ugc-card__media {
    position: relative;
    aspect-ratio: 9 / 16;
    overflow: hidden;
  }
  .ugc-card__media video, .ugc-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }
  .ugc-card:hover .ugc-card__media video, .ugc-card:hover .ugc-card__media img { transform: scale(1.05); }
  .ugc-card__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 44px;
    height: 44px;
    background: rgba(190, 52, 78, 0.85);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }
  .ugc-card__play svg { margin-left: 3px; }
  .ugc-card__info { padding: 10px 12px 12px; }
  .ugc-card__credit-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6px;
  }
  .ugc-card__credit {
    font-size: 11px;
    color: var(--color-text-muted);
  }
  .country-badge {
    background: var(--color-primary);
    color: var(--color-white);
    font-size: 10px;
    font-weight: 600;
    padding: 3px 6px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .ugc-card__caption {
    font-size: 13px;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

