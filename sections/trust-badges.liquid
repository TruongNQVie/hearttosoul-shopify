<section class="trust-badges-refined">
  <div class="container">
    <div class="trust-badges-refined__grid">
      {%- for block in section.blocks -%}
        <div class="trust-badge-card" {{ block.shopify_attributes }}>
          <div class="trust-badge-card__icon">
            {%- case block.settings.icon -%}
              {%- when 'shipping' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13" rx="2" ry="2"/><path d="M16 8h4l3 5v5h-7V8z"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
              {%- when 'warranty' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>
              {%- when 'secure' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
              {%- when 'support' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              {%- else -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="m9 12 2 2 4-4"/><circle cx="12" cy="12" r="10"/></svg>
            {%- endcase -%}
          </div>
          <h3 class="trust-badge-card__title">{{ block.settings.title }}</h3>
          <p class="trust-badge-card__text">{{ block.settings.text }}</p>
        </div>
      {%- endfor -%}
    </div>

    <p class="trust-badges-refined__note">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 12 2 2 4-4"/><circle cx="12" cy="12" r="10"/></svg>
      {{ section.settings.note }}
    </p>
  </div>
</section>

<style>
  .trust-badges-refined {
    padding: 10px 0 60px;
    background: var(--color-bg);
  }
  .trust-badges-refined__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }
  @media (min-width: 750px) { .trust-badges-refined__grid { grid-template-columns: repeat(4, 1fr); } }
  .trust-badge-card { text-align: center; }
  .trust-badge-card__icon {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(190, 52, 78, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16px;
    color: var(--color-primary);
  }
  .trust-badge-card__icon svg { width: 24px; height: 24px; }
  .trust-badge-card__title {
    font-family: var(--font-body);
    font-size: 15px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--color-text);
  }
  .trust-badge-card__text {
    font-size: 13px;
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  .trust-badges-refined__note {
    text-align: center;
    margin-top: 40px;
    font-size: 13px;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }
</style>

{% schema %}
{
  "name": "Trust Badges",
  "settings": [
    { "type": "text", "id": "note", "default": "Trusted by 10,000+ happy customers across the USA", "label": "Bottom note" }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        { "type": "select", "id": "icon", "options": [
          { "value": "shipping", "label": "Shipping" },
          { "value": "warranty", "label": "Warranty/Shield" },
          { "value": "secure", "label": "Secure Lock" },
          { "value": "support", "label": "Support" },
          { "value": "check", "label": "Check" }
        ], "default": "shipping", "label": "Icon" },
        { "type": "text", "id": "title", "default": "Free Shipping", "label": "Title" },
        { "type": "text", "id": "text", "default": "On all USA orders", "label": "Description" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        { "type": "badge", "settings": { "icon": "shipping", "title": "Free Shipping", "text": "On all USA orders" } },
        { "type": "badge", "settings": { "icon": "warranty", "title": "Lifetime Warranty", "text": "We stand behind our craft" } },
        { "type": "badge", "settings": { "icon": "secure", "title": "Secure Checkout", "text": "SSL encrypted payments" } },
        { "type": "badge", "settings": { "icon": "support", "title": "24/7 Support", "text": "Always here for you" } }
      ]
    }
  ]
}
{% endschema %}
