<div class="account-page">
  <h1>{{ 'customer.account.title' | t }}</h1>
  
  <div class="account-info">
    <h2>{{ 'customer.account.details' | t }}</h2>
    <p>{{ customer.name }}</p>
    <p>{{ customer.email }}</p>
    <a href="{{ routes.account_addresses_url }}">{{ 'customer.account.view_addresses' | t }}</a>
  </div>
  
  <div class="order-history">
    <h2>{{ 'customer.orders.title' | t }}</h2>
    {% if customer.orders.size > 0 %}
      <table>
        <thead>
          <tr>
            <th>{{ 'customer.orders.order_number' | t }}</th>
            <th>{{ 'customer.orders.date' | t }}</th>
            <th>{{ 'customer.orders.total' | t }}</th>
            <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
          </tr>
        </thead>
        <tbody>
          {% for order in customer.orders %}
            <tr>
              <td><a href="{{ order.customer_url }}">{{ order.name }}</a></td>
              <td>{{ order.created_at | date: "%B %d, %Y" }}</td>
              <td>{{ order.total_price | money }}</td>
              <td>{{ order.fulfillment_status_label }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p>{{ 'customer.orders.none' | t }}</p>
    {% endif %}
  </div>
  
  <a href="{{ routes.account_logout_url }}">{{ 'customer.account.log_out' | t }}</a>
</div>

<style>
  .account-page { max-width: 1000px; margin: 40px auto; padding: 20px; }
  .account-info, .order-history { margin-bottom: 40px; }
  table { width: 100%; border-collapse: collapse; }
  th, td { padding: 12px; text-align: left; border-bottom: 1px solid #ddd; }
</style>

{% schema %}
{
  "name": "Account",
  "settings": []
}
{% endschema %}
