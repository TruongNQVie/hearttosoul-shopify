<section class="main-account section-padding">
  <div class="container" style="max-width:800px;">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:40px;">
      <h1 style="font-family:var(--font-heading); font-size:clamp(2rem,4vw,2.5rem);">My Account</h1>
      <a href="{{ routes.account_logout_url }}" style="font-size:14px; color:var(--color-primary); text-decoration:none; font-weight:600;">Log Out</a>
    </div>

    <div style="display:grid; grid-template-columns:1fr; gap:40px;">
      <div>
        <h2 style="font-size:18px; font-weight:700; margin-bottom:16px; padding-bottom:12px; border-bottom:1px solid var(--color-border);">Account Details</h2>
        <p style="font-size:15px;">{{ customer.name }}</p>
        <p style="font-size:15px; color:var(--color-text-muted);">{{ customer.email }}</p>
        {%- if customer.default_address -%}
          <p style="font-size:14px; color:var(--color-text-muted); margin-top:8px;">{{ customer.default_address | format_address }}</p>
        {%- endif -%}
      </div>

      <div>
        <h2 style="font-size:18px; font-weight:700; margin-bottom:16px; padding-bottom:12px; border-bottom:1px solid var(--color-border);">Order History</h2>
        {%- if customer.orders.size > 0 -%}
          {%- for order in customer.orders -%}
            <div style="padding:16px 0; border-bottom:1px solid rgba(0,0,0,0.06);">
              <div style="display:flex; justify-content:space-between; align-items:center;">
                <a href="{{ order.customer_url }}" style="font-weight:600; color:var(--color-primary); text-decoration:none;">{{ order.name }}</a>
                <span style="font-size:13px; color:var(--color-text-muted);">{{ order.created_at | date: '%B %d, %Y' }}</span>
              </div>
              <p style="font-size:14px; margin-top:4px;">{{ order.financial_status_label }} Â· {{ order.total_price | money }}</p>
            </div>
          {%- endfor -%}
        {%- else -%}
          <p style="color:var(--color-text-muted);">You haven't placed any orders yet.</p>
          <a href="/collections" style="display:inline-block; margin-top:16px; padding:12px 28px; background:var(--color-primary); color:var(--color-white); border-radius:50px; font-weight:600; font-size:14px; text-decoration:none;">Start Shopping</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Account",
  "settings": []
}
{% endschema %}
