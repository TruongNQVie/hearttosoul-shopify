<section class="stats-section">
  <div class="container">
    <div class="stats-grid">
      {%- for block in section.blocks -%}
        <div class="stat-item" {{ block.shopify_attributes }}>
          <div class="stat-item__icon">
            {%- case block.settings.icon -%}
              {%- when 'gift' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polyline points="20 12 20 22 4 22 4 12"/><rect x="2" y="7" width="20" height="5"/><line x1="12" y1="22" x2="12" y2="7"/><path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/><path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/></svg>
              {%- when 'users' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
              {%- when 'heart' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
              {%- when 'star' -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
              {%- else -%}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/></svg>
            {%- endcase -%}
          </div>
          <div class="stat-item__number">{{ block.settings.number }}</div>
          <div class="stat-item__label">{{ block.settings.label }}</div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stats Counter",
  "settings": [],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        { "type": "select", "id": "icon", "options": [
          { "value": "gift", "label": "Gift" },
          { "value": "users", "label": "Users" },
          { "value": "heart", "label": "Heart" },
          { "value": "star", "label": "Star" }
        ], "default": "gift", "label": "Icon" },
        { "type": "text", "id": "number", "default": "10,000+", "label": "Number" },
        { "type": "text", "id": "label", "default": "GIFTS DELIVERED", "label": "Label" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats Counter",
      "blocks": [
        { "type": "stat", "settings": { "icon": "gift", "number": "10,000+", "label": "GIFTS DELIVERED" } },
        { "type": "stat", "settings": { "icon": "users", "number": "8,500+", "label": "HAPPY CUSTOMERS" } },
        { "type": "stat", "settings": { "icon": "heart", "number": "50+", "label": "COUNTRIES REACHED" } },
        { "type": "stat", "settings": { "icon": "star", "number": "4.9â˜…", "label": "AVERAGE RATING" } }
      ]
    }
  ]
}
{% endschema %}
