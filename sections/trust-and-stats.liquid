<style>
  /* Google Font import for Cormorant Garamond + Montserrat */
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Montserrat:wght@400;500;600;700&display=swap');

  .trust-and-stats {
    background: #E9DECE;
    position: relative;
    padding: 80px 0;
    overflow: hidden;
  }

  /* Grain Texture Overlay */
  .trust-grain-overlay {
    position: absolute;
    inset: 0;
    opacity: 0.04;
    mix-blend-mode: overlay;
    pointer-events: none;
    z-index: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 256px 256px;
  }

  .trust-and-stats .container { position: relative; z-index: 1; }

  .trust-and-stats::before {
    content: '';
    position: absolute;
    top: 0; left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 1000px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(29,29,29,0.08), transparent);
  }

  /* Typography */
  .trust-heading {
    font-family: 'Cormorant Garamond', serif !important;
    color: #1D1D1D !important;
    font-weight: 500;
    font-size: clamp(2rem, 4vw, 2.8rem);
    margin-bottom: 8px;
  }
  .trust-subtitle {
    font-family: 'Montserrat', sans-serif !important;
    color: #1D1D1D !important;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.02em;
  }
  
  .trust-and-stats__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px 20px;
    margin-top: 50px;
  }
  @media (min-width: 750px) { .trust-and-stats__grid { grid-template-columns: repeat(4, 1fr); gap: 40px; } }
  
  .trust-badge-card {
    text-align: center;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .trust-badge-card:hover {
    transform: scale(1.05);
  }

  /* Minimalist line-art icons — Caramel Gold */
  .trust-badge-card__icon {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: transparent;
    border: 1.5px solid #8B7355;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    color: #8B7355;
    transition: all 0.35s ease;
  }
  .trust-badge-card:hover .trust-badge-card__icon {
    background: rgba(139, 115, 85, 0.1);
    border-color: #6B5840;
    transform: scale(1.08);
  }
  .trust-badge-card__icon svg { width: 26px; height: 26px; }
  .trust-badge-card__title {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 6px;
    color: #1D1D1D;
    letter-spacing: 0.01em;
  }
  .trust-badge-card__text {
    font-family: 'Montserrat', sans-serif;
    font-size: 12px;
    color: rgba(29, 29, 29, 0.5);
    line-height: 1.5;
  }

  .trust-and-stats__divider {
    border-top: 1px solid rgba(29,29,29,0.06);
    border-bottom: 1px solid rgba(29,29,29,0.06);
    margin: 60px 0;
    padding: 16px 0;
    text-align: center;
  }
  .trust-and-stats__note {
    font-family: 'Montserrat', sans-serif;
    font-size: 12px;
    letter-spacing: 0.05em;
    color: rgba(29, 29, 29, 0.55);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin: 0;
    font-weight: 500;
  }
  .trust-and-stats__note svg { color: #8B7355; }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px 20px;
    text-align: center;
  }
  @media (min-width: 750px) {
    .stats-grid { grid-template-columns: repeat(4, 1fr); gap: 40px; }
  }
  .stat-item {
    padding: 20px 0;
  }
  .stat-item__number {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 600;
    color: #1D1D1D;
    line-height: 1;
    margin-bottom: 12px;
    font-style: italic;
  }
  .stat-number-animate {
    color: #6B5840;
    display: inline-block;
  }
  .stat-item__label {
    font-family: 'Montserrat', sans-serif;
    font-size: 11px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(29, 29, 29, 0.5);
    font-weight: 600;
  }

  /* Scroll fade-in animation */
  .trust-animate {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    transition-delay: calc(var(--anim-order, 0) * 0.12s);
  }
  .trust-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

