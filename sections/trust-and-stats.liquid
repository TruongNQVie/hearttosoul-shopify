<section class="trust-and-stats section-padding section-alt">
  <div class="trust-grain-overlay"></div>
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="section-title trust-section-title">
        <h2 class="trust-heading">{{ section.settings.heading }}</h2>
        {%- if section.settings.subtitle != blank -%}
