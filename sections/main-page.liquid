<div class="page-content">
  <div class="page-header">
    <h1>{{ page.title }}</h1>
  </div>
  
  <div class="page-body">
    {{ page.content }}
  </div>
</div>

<style>
  .page-content { max-width: 1000px; margin: 0 auto; padding: 40px 20px; }
  .page-header { margin-bottom: 30px; }
  .page-header h1 { font-size: 2.5em; }
  .page-body { line-height: 1.8; font-size: 1.1em; }
  .page-body img { max-width: 100%; height: auto; }
</style>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}
