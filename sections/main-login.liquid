<div class="login-page">
  <h1>{{ 'customer.login.title' | t }}</h1>
  
  {% form 'customer_login' %}
    {{ form.errors | default_errors }}
    
    <div class="form-group">
      <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
      <input type="email" name="customer[email]" id="CustomerEmail" autocomplete="email" required>
    </div>
    
    <div class="form-group">
      <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
      <input type="password" name="customer[password]" id="CustomerPassword" required>
    </div>
    
    <button type="submit">{{ 'customer.login.sign_in' | t }}</button>
    
    <p>
      <a href="{{ routes.account_recover_url }}">{{ 'customer.login.forgot_password' | t }}</a>
    </p>
  {% endform %}
  
  <p>{{ 'customer.login.new_customer' | t }} <a href="{{ routes.account_register_url }}">{{ 'customer.login.create_account' | t }}</a></p>
</div>

<style>
  .login-page { max-width: 500px; margin: 60px auto; padding: 40px; border: 1px solid #ddd; }
  .form-group { margin-bottom: 20px; }
  .form-group label { display: block; margin-bottom: 5px; }
  .form-group input { width: 100%; padding: 10px; }
  button { width: 100%; padding: 12px; margin-top: 10px; }
</style>

{% schema %}
{
  "name": "Login",
  "settings": []
}
{% endschema %}
