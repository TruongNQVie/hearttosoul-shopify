<div class="blog-page">
  <h1>{{ blog.title }}</h1>
  
  {% if blog.articles.size > 0 %}
    <div class="articles-grid">
      {% for article in blog.articles %}
        <article class="article-card">
          {% if article.image %}
            <a href="{{ article.url }}">
              <img src="{{ article.image | img_url: '600x' }}" alt="{{ article.image.alt | escape }}">
            </a>
          {% endif %}
          
          <div class="article-content">
            <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
            <p class="article-meta">
              {{ article.published_at | date: "%B %d, %Y" }} | {{ article.author }}
            </p>
            {% if article.excerpt != blank %}
              <p>{{ article.excerpt }}</p>
            {% endif %}
            <a href="{{ article.url }}" class="read-more">Read more</a>
          </div>
        </article>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  {% else %}
    <p>No articles found.</p>
  {% endif %}
</div>

<style>
  .blog-page { max-width: 1200px; margin: 0 auto; padding: 40px 20px; }
  .articles-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 40px; margin-top: 40px; }
  .article-card img { width: 100%; height: auto; }
  .article-content { padding: 20px 0; }
  .article-meta { color: #666; font-size: 0.9em; margin: 10px 0; }
  .read-more { color: #007bff; text-decoration: none; }
</style>

{% schema %}
{
  "name": "Blog",
  "settings": []
}
{% endschema %}
