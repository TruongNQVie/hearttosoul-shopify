<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ 'gift_cards.issued.title' | t }}</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 40px; background: #f5f5f5; }
    .gift-card { max-width: 600px; margin: 0 auto; background: white; padding: 40px; border-radius: 8px; text-align: center; }
    .gift-card h1 { margin-bottom: 20px; }
    .gift-card-code { font-size: 2em; font-weight: bold; background: #f0f0f0; padding: 20px; margin: 30px 0; border-radius: 4px; letter-spacing: 0.1em; }
    .gift-card-balance { font-size: 1.5em; margin: 20px 0; }
    .gift-card-qr { margin: 30px 0; }
    .print-button { padding: 12px 30px; background: #000; color: white; border: none; cursor: pointer; border-radius: 4px; }
    @media print { .print-button { display: none; } }
  </style>
</head>
<body>
  <div class="gift-card">
    <img src="{{ 'gift-card/card.jpg' | shopify_asset_url }}" alt="Gift card" style="max-width:100%; height:auto;">
    <h1>{{ 'gift_cards.issued.subtext' | t }}</h1>
    
    {% if gift_card.balance != gift_card.initial_value %}
      <p class="gift-card-balance">{{ 'gift_cards.issued.remaining_html' | t: balance: gift_card.balance | money }}</p>
    {% endif %}
    
    <div class="gift-card-code" id="GiftCardDigits">
      {{ gift_card.code | format_code }}
    </div>
    
    <p class="gift-card-balance">
      {{ gift_card.balance | money }}
    </p>
    
    {% if gift_card.pass_url %}
      <a href="{{ gift_card.pass_url }}" style="display:inline-block; margin:20px 0;">
        <img src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}" width="120" alt="Add to Apple Wallet">
      </a>
    {% endif %}
    
    <div class="gift-card-qr">
      <img src="{{ gift_card.qr_identifier | prepend: 'https://chart.googleapis.com/chart?chs=200x200&cht=qr&chl=' }}" alt="QR code" width="120" height="120">
    </div>
    
    {% if gift_card.expired? %}
      <p style="color:red;">{{ 'gift_cards.issued.expired' | t }}</p>
    {% endif %}
    
    {% unless gift_card.enabled %}
      <p style="color:red;">{{ 'gift_cards.issued.disabled' | t }}</p>
    {% endunless %}
    
    <p>
      {{ 'gift_cards.issued.redeem_html' | t: value: gift_card.balance | money, shop_url: shop.url }}
    </p>

    <button class="print-button" onclick="window.print();">{{ 'gift_cards.issued.print' | t }}</button>
  </div>
</body>
</html>
