<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#BE344E">
    <link rel="icon" type="image/png" href="{{ 'favicon.png' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'favicon.png' | asset_url }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- else -%}
      <meta name="description" content="Elevate your gifting into a sacred ritual. Discover our curated collection of ethereal jewelry and preserved roses designed for modern, enduring love.">
    {%- endif -%}

    <!-- Open Graph Social Meta Tags -->
    <meta property="og:site_name" content="Heart to Soul">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:title" content="Heart to Soul | Sacred Keepsakes &amp; Eternal Blooms">
    <meta property="og:type" content="website">
    <meta property="og:description" content="{% if page_description %}{{ page_description | escape }}{% else %}Elevate your gifting into a sacred ritual. Discover our curated collection of ethereal jewelry and preserved roses designed for modern, enduring love.{% endif %}">
    <meta property="og:image" content="https:{{ 'real-story-1.png' | asset_url }}">
    <meta property="og:image:secure_url" content="https:{{ 'real-story-1.png' | asset_url }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="628">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Heart to Soul | Sacred Keepsakes &amp; Eternal Blooms">
    <meta name="twitter:description" content="{% if page_description %}{{ page_description | escape }}{% else %}Elevate your gifting into a sacred ritual. Discover our curated collection of ethereal jewelry and preserved roses designed for modern, enduring love.{% endif %}">

    <title>
      {{ page_title }}
      {%- unless page_title contains 'Heart to Soul' %} &ndash; Heart to Soul{% endunless -%}
    </title>

    {{ 'base-v2.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}

    <script>document.documentElement.className=document.documentElement.className.replace('no-js','js');</script>
    <!-- Meta Pixel Code -->
